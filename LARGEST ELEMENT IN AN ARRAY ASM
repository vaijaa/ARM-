 AREA LARGEST ,CODE,READONLY
	ENTRY
	LDR R0,=ARRAY
	LDR R5,[R0],#4
	SUBS R5,R5,#1
	LDR R2,[R0],#4
LOOP 
    LDR R4,[R0],#4
	CMP R2,R4
	BHI LOOP1
;BLS LOOP1
    MOV R2,R4
LOOP1 
  SUBS R5,R5,#1
  CMP R5,#0
  BNE LOOP
  LDR R4,=RESULT
  STR R2,[R4] 
HERE B HERE 
ARRAY DCD 0X00000004,0X00000001,0X00000002,0X00000004,0X00000003
 AREA DATA2,DATA,READWRITE
RESULT DCD 0X0
	END
	  
    
	
